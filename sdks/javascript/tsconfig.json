{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "./demo/**/*",
    "./src/**/*",
  ],
  "exclude": [".node_modules"],
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "lib": ["es2023"],
    "target": "es2022",
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "../../schema.graphql",
        "tadaOutputLocation": "./src/graphql-env.d.ts"
      }
    ]
  }
}
