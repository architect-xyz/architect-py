{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": ["./demo/**/*", "./src/**/*", "./tests/**/*"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "lib": ["es2023"],
    "target": "es2022",
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "../../schema.graphql",
        "tadaOutputLocation": "./src/graphql-env.d.ts"
      }
    ]
  }
}
